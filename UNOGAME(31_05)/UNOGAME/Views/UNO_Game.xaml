                <ImageBrush ImageSource="{Binding ButtonPictures[0]}"/>
            </Button.Background>
        </Button>
        <Button Command="{Binding Button1}" HorizontalAlignment="Left" Margin="74,745,0,-2" VerticalAlignment="Top" Width="79" Height="98">
